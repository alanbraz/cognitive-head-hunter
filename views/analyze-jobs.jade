//- index.jade
extends ./layout.jade

block specificJS
	script(type='text/javascript', src='/js/jobs.js')
	
block content
	div.row
		h2.text-center Job search for candidates 
		div.row(style='padding:10px;margin-top:10px;margin-bottom:10px;')
			div#loading.row.col-lg-12.col-xs-12.text-center(style='display:none;')
				img(src='/images/watson.gif')
			div.row.col-lg-12.col-xs-12
				form
					div.row.col-lg-12.col-xs-12
						div
							div.form-group.col-xs-6
								label(for="txt-id") Job ID
								textarea#txt-id.form-control(type="text" required='true' 
									placeholder='Please enter the job ID') #{job.id}
							div.form-group.col-xs-6
								label(for="txt-name") Job Title
								textarea#txt-title.form-control(type="text" required='true' 
									placeholder='Please enter the job title') #{job.label}
							div.col-lg-12.col-xs-12
								label(for="txt-profile") Description
								textarea#txt-profile.content.form-control(rows='10', required='true',
									placeholder='Please enter the job description (minimum of 50 words)...') #{job.parts[0].data}
								div.text-right
									span.wordsCount.small
					div.row
						div.col-lg-4.col-lg-push-4.col-xs-4
							button.btn.btn-block.clear-btn(type='reset') Clear
						div.col-lg-4.col-lg-push-4.col-xs-4.col-xs-push-4
							button#continue-btn.btn.btn-block.analysis-btn(type='button') Continue

